rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - sadece kendi profil resmini yükleyebilir
    match /profile_pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Gallery images - authenticated kullanıcılar okuyabilir, sadece admin yükleyebilir
    match /gallery/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Service images - herkes okuyabilir, sadece admin yükleyebilir
    match /services/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Product images - herkes okuyabilir, sadece admin yükleyebilir
    match /products/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
                   firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
